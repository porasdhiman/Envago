<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/textcolor">

        <ImageView
            android:id="@+id/back_button_create"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="14dp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Details"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="NAME OF ADVENTURE"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_txtView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="The Best Way Around The Island"
                android:inputType="text"

                android:textSize="14sp" />

            <TextView
                android:id="@+id/name_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/mail_error_txtView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@color/LightGrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="Difficulty"
                android:textSize="14sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:max="3"
                android:maxHeight="5dp"
                android:minHeight="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp"

                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:theme="@style/AppTheme.SeekBar"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Easy"
android:layout_weight="1"
android:gravity="center"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="Moderate"
                    android:layout_weight="1"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Difficult"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="Extreme"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="14sp" />
            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"

                android:background="@color/LightGrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="CATGORY"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/cat_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_txtView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:entries="@array/event_cat"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cat_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"

                android:background="@color/LightGrey" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="MEETING POINT"
                android:textSize="14sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/meeting_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_txtView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="Please Select"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/meeting_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"

                android:background="@color/LightGrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="MEETING TIME"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meeting_time_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_txtView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
             android:gravity="center_vertical"
                android:background="@null"
                android:text="Please Select"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/meeting_time_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"

                android:background="@color/LightGrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="ADVENTAURE DESCRIPTION"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_txtView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:text="Write a description"
                android:inputType="textEmailAddress"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/desc_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"

                android:background="@color/LightGrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="PLACES/EVENTS"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/place_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_txtView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="Please Select"
                android:inputType="number"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/place_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"

                android:background="@color/LightGrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="PRICE"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pricing_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_txtView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@null"

                android:hint="$"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pricing_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"

                android:background="@color/LightGrey" />

           <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="CRITERIA/ELIGIBILITY"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/crtieria_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_txtView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="Write something"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/crtieria_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"

                android:background="@android:color/darker_gray" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="NOTE"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/disclaimer_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_txtView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:hint="Write something"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/disclaimer_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"

                android:background="@color/LightGrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="WHAT'S INCLUDED"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/whts_editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_txtView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:text="Write something"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/whts_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/id_text"
                    android:layout_marginBottom="10dp"

                    android:background="@drawable/red_button_back"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>