<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/main_layout">

    <RelativeLayout
        android:id="@+id/main_heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/textcolor">

        <ImageView
            android:id="@+id/back_button_create"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="14dp"
            android:src="@drawable/back_button"  />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="New Adventure"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/make_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Make your adventure"
        android:textColor="#000"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:text="Dates and schedules"
                android:textColor="#373737"

                android:layout_toLeftOf="@+id/booking_checkBox"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/booking_checkBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/unselected"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/LightGrey" />

        <RelativeLayout
            android:id="@+id/details_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:text="Details"
                android:textColor="#373737"
                android:layout_toLeftOf="@+id/detail_checkBox"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/detail_checkBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"

                android:layout_alignParentRight="true"
                android:src="@drawable/unselected"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/LightGrey" />

        <RelativeLayout
            android:id="@+id/photo_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:text="Add Photo"
                android:textColor="#373737"
                android:layout_toLeftOf="@+id/add_photo_checkBox"
                android:gravity="center_vertical"

                android:layout_centerVertical="true"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/add_photo_checkBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"

                android:layout_alignParentRight="true"
                android:src="@drawable/unselected"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/LightGrey" />

        <RelativeLayout
            android:id="@+id/route_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:text="Route"
                android:textColor="#373737"
                android:layout_toLeftOf="@+id/route_checkbox"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"

                android:textSize="17sp" />

            <ImageView
                android:id="@+id/route_checkbox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"

                android:layout_alignParentRight="true"
                android:src="@drawable/unselected"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/LightGrey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/preview_button"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginBottom="20dp"
                android:text="Preview"
                android:textColor="@color/Gray"
                android:gravity="center"

                android:textAllCaps="false"
android:background="@drawable/gray_boarder_button"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <!--    <Button
                    android:id="@+id/submit_button_create_advanture"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/id_text"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_dark"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="14sp" />-->
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>