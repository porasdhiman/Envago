<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171E27">

    <RelativeLayout
        android:id="@+id/advanture_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/advanture_img"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:src="@drawable/create_advanture"/>
        <TextView
            android:id="@+id/create_advanture_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Advantures"
            android:layout_toRightOf="@+id/advanture_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"
            android:textSize="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/call_all_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/advanture_layout">
        <ImageView
            android:id="@+id/call_all_img"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:src="@drawable/call_all_advanture"/>
        <TextView
            android:id="@+id/call_all_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call All Volunteers"
            android:layout_toRightOf="@+id/call_all_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"
            android:textSize="20dp"/>

    </RelativeLayout>
<View
    android:id="@+id/view1"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="#fff"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_below="@+id/call_all_layout"/>
    <RelativeLayout
        android:id="@+id/myadvanture_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/view1">
        <ImageView
            android:id="@+id/myadvanture_img"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/myadvanture_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Advantures"
            android:layout_toRightOf="@+id/myadvanture_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"
            android:textSize="20dp"/>

    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/myadvanture_layout"/>
    <RelativeLayout
        android:id="@+id/mychats_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/view2">
        <ImageView
            android:id="@+id/mychats_img"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:src="@drawable/my_chat"/>
        <TextView
            android:id="@+id/mychats_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Chats"
            android:layout_toRightOf="@+id/mychats_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"
            android:textSize="20dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/logout_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/logout_img"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:src="@drawable/logout"/>
        <TextView
            android:id="@+id/logout_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_toRightOf="@+id/logout_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"
            android:textSize="20dp"/>

    </RelativeLayout>

</RelativeLayout>