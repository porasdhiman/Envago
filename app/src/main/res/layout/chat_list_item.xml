<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"


        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/next_img"

android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/chat_img"
        android:text=""
        android:textColor="@color/textcolor"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/chat_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/chat_name"


        android:layout_toLeftOf="@+id/next_img"
        android:layout_toRightOf="@+id/chat_img"
        android:singleLine="true"
        android:text="Canyoneering"
        android:textColor="@color/Black"
        android:textSize="14sp" />



    <TextView
        android:id="@+id/chat_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_address_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/next_img"
        android:layout_toRightOf="@+id/chat_img"
        android:singleLine="true"
        android:text="hello how are u?"
        android:textColor="@color/Gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/next_img"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:text="26 feb 2016"
        android:textSize="13sp"
        android:visibility="gone" />


</RelativeLayout>