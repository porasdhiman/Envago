    <TextView
        android:id="@+id/slider_sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="43dp"

        android:layout_above="@+id/slider_sign_in_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/slider_btn_back"
        android:gravity="center"
        android:text="Create an Adventure now"
        android:textColor="@color/textcolor"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/slider_sign_in_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/document_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Document approved"
            android:textColor="@android:color/white" />


    </LinearLayout>
