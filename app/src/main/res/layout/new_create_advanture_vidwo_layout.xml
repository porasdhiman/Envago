<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/main_heading"
    android:fitsSystemWindows="true">
    <envago.envago.MyVideoView
        android:id="@+id/videoView1"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"




        />
</RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/main_heading"


        android:background="@android:color/transparent" />
    <ImageView
        android:layout_width="35dp"
        android:layout_height="38dp"
        android:src="@drawable/splash_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
android:layout_marginTop="10dp"
        android:layout_above="@+id/slider_sign_up_btn"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@drawable/not_filled" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/filled" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:src="@drawable/filled" />
    </LinearLayout>
    <TextView
        android:id="@+id/slider_sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="43dp"

        android:layout_above="@+id/slider_sign_in_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/slider_btn_back"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Create an Adventure now"
        android:textColor="@color/textcolor"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/slider_sign_in_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/document_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Document approved"
            android:textColor="@android:color/white" />



    </LinearLayout>
    <!--  <TextView
          android:id="@+id/bottom_txt"
          android:layout_width="match_parent"
          android:layout_height="50dp"


          android:layout_alignParentBottom="true"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="10dp"
          android:visibility="gone" />-->
    <RelativeLayout
        android:id="@+id/main_heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/textcolor">

        <ImageView
            android:id="@+id/back_button_create"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="14dp"
            android:src="@drawable/back_button"  />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Planner"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>