<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/textcolor"
        android:id="@+id/main_heading">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/search"
            android:id="@+id/search_button"
            android:layout_alignParentRight="true"
            android:layout_margin="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wish"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:id="@+id/header_text_adv"/>



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/message_linear_layout"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Your Trips"
        android:textColor="#000"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="1.5mm"
        android:text="Looking for your next adventure and not sure which one to go to first? Create your personalised wish list by tapping the heart on any adventure to see them here"
        android:textColor="#000"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/start_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/red_button_back"
            android:gravity="center"
            android:text="Start exploring"
            android:textColor="#fff"
            android:textSize="15sp" />
    </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/goint_to_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/view_top_txtView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:text="Goning to"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_item_pager1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"></android.support.v4.view.ViewPager>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/planning_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Planning"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/cat_pager"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:fitsSystemWindows="true"

                    >

                </android.support.v4.view.ViewPager>

            </LinearLayout>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:duration="3000"
                android:layout_marginTop="5dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical"


                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Wish list"
                        android:textColor="@color/Gray"
                        android:background="@color/Gray"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/view_img"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:background="@color/Gray"
                            android:layout_marginTop="10dp"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/start_event_txtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/start_event_back"
                            android:gravity="center"
                            android:paddingBottom="3dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="3dp"
                            android:text="Started"
                            android:textColor="#fff"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/heart_img"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="12dp"
                            android:src="@drawable/heart"
                            android:visibility="gone" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/view_price_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@color/Gray"
                            android:text="$30"
                            android:textColor="@color/Gray"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/view_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/view_price_txt"
                            android:background="@color/Gray"
                            android:text="A Time Travel Postcard"
                            android:textColor="@color/Gray"
                            android:textSize="22sp" />


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/Gray">

                            <ImageView
                                android:id="@+id/view_date_img"
                                android:layout_width="17dp"
                                android:layout_height="17dp"

                                android:layout_alignParentLeft="true" />

                            <TextView
                                android:id="@+id/view_date_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/view_date_img"
                                android:text="22 jun"
                                android:textColor="@color/Gray"
                                android:textSize="13dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@color/Gray">

                            <ImageView
                                android:id="@+id/view_location_img"
                                android:layout_width="17dp"
                                android:layout_height="17dp"

                                android:layout_alignParentLeft="true" />

                            <TextView
                                android:id="@+id/view_location_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/view_location_img"
                                android:text="Bosnia and Herzegovina"
                                android:textColor="@color/Gray"
                                android:textSize="13dp" />
                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <LinearLayout
                android:id="@+id/wish_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/view_top_txtView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Wish list"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_item_pager2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"></android.support.v4.view.ViewPager>

            </LinearLayout>

          <!--  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Featured Planners"
                    android:textColor="@color/textcolor"
                    android:textSize="18sp" />

                <ListView
                    android:id="@+id/ad_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/main_heading"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16sp"
                    android:padding="5dp"
                    android:scrollbars="none">

                </ListView>
            </LinearLayout>-->

        </LinearLayout>
    </ScrollView>

</LinearLayout>