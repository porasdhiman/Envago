<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/textcolor">

        <ImageView
            android:id="@+id/back_button_create"
            android:layout_width="50dp"
            android:layout_height="50dp"
           android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Account Application"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_in_txtView"
                android:layout_marginTop="20dp"
                android:text="FULL NAME"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/name_create"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:background="@null"
                android:inputType="textEmailAddress"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/name_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mail_editText"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:background="@color/LightGrey" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_in_txtView"
                android:layout_marginTop="20dp"
                android:text="COUNTRY"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/country_create"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:background="@null"
                android:inputType="textEmailAddress"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/country_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/LightGrey" />

            <TextView

                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_in_txtView"
                android:layout_marginTop="20dp"
                android:text="ADDRESS"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/address_create"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:background="@null"
                android:inputType="textEmailAddress"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/address_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/LightGrey" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_in_txtView"
                android:layout_marginTop="20dp"
                android:text="ABOUT PLANNER"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/about_create"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:background="@null"
                android:inputType="textEmailAddress"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/about_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/LightGrey" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_in_txtView"
                android:layout_marginTop="20dp"
                android:text="PAYPAL ACCOUNT"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/paypal_create"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:background="@null"
                android:inputType="textEmailAddress"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/paypal_error_txtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@null"
                android:inputType="textEmailAddress"
                android:textColor="#ff0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/LightGrey" />

            <RelativeLayout
                android:id="@+id/firstchk_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/individual_layout"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/red_border_button"
                    android:gravity="center"
                    android:orientation="horizontal">

                   <!-- <ImageView
                        android:id="@+id/chk_group_create"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/unselected" />-->

                    <TextView
                        android:id="@+id/ind_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="Individual"

                        android:textColor="@color/Black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/group_layout"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:padding="4dp"
                    android:background="@drawable/red_border_button"
android:gravity="center"
                    android:orientation="horizontal">

                    <!--<ImageView
                        android:id="@+id/chk_individual_create"

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/unselected" />-->

                    <TextView
                        android:id="@+id/gp_txtView"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:text="Group"

                        android:textColor="@color/Black"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- <CheckBox
                     android:id="@+id/chk_group_create"
                     android:layout_width="120dp"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="30dp"
                     android:layout_toRightOf="@+id/chk_individual_create"
                     android:text="Group"
                     android:textColor="#000"

                     android:textSize="14sp" />-->

                <!-- <CheckBox
                     android:id="@+id/chk_individual_create"
                     android:layout_width="120dp"
                     android:layout_height="wrap_content"
                     android:text="Individual"
                     android:textColor="#000"
                     android:textSize="14sp"
                     android:layout_alignParentTop="true"
                     android:layout_alignParentLeft="true"
                     android:layout_alignParentStart="true"
                     android:layout_marginLeft="36dp"
                     android:layout_marginStart="36dp" />-->

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/scnd_checkgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/license_layout"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/red_border_button"
android:gravity="center"
                    android:orientation="horizontal">

                  <!--  <ImageView
                        android:id="@+id/chk_licensed_create"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/unselected" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/li_txtView"

                        android:text="Licensed"
                        android:textColor="@color/Black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/not_license_layout"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/red_border_button"
android:gravity="center"
                    android:orientation="horizontal">

                   <!-- <ImageView
                        android:id="@+id/chk_notlicensed_create"

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/unselected" />
-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/nl_txtView"

                        android:text="Not Licensed"
                        android:textColor="@color/Black"
                        android:textSize="14sp" />
                </LinearLayout>

                <!--<CheckBox
                    android:id="@+id/chk_licensed_create"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Licensed"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chk_notlicensed_create"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/chk_licensed_create"
                    android:text="Not Licensed"
                    android:textColor="#000"
                    android:textSize="14sp" />-->

            </RelativeLayout>

            <TextView
                android:id="@+id/id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="We need driver licence / passport"
                android:textColor="@color/Gray"
                android:textSize="14sp" />


            <RelativeLayout
                android:id="@+id/upload_id_button_create"
                android:layout_width="match_parent"
                android:layout_height="43dp"


                android:background="@drawable/red_border_button"
                android:text="Upload ID"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="14sp">

                <TextView
                    android:id="@+id/upload_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Upload ID"
                    android:textColor="@color/textcolor"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/document_pic_create"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/upload_txt" />
            </RelativeLayout>

            <Button
                android:id="@+id/submit_button_create"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_below="@+id/id_text"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_dark"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>