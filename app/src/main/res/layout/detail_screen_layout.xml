<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/textcolor">

        <ImageView
            android:id="@+id/detail_back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="14dp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ENVAGO"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager_introduction"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:fitsSystemWindows="true"
                tools:listitem="@layout/pager_item" />

            <RelativeLayout
                android:id="@+id/viewPagerIndicator"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="-50dp"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/viewPagerCountDots"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="-5dp"
                android:background="#191F28">

                <TextView
                    android:id="@+id/about_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="About"
                    android:textColor="@color/textcolor"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/route_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="30dp"
                    android:text="Route"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/review_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:text="Review"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </RelativeLayout>
            <!--About layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:background="@color/textcolor"
                        android:padding="4dp"
                        android:text="EVENT STARTED"
                        android:textColor="#fff" />

                    <RatingBar
                        android:id="@+id/stars"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/status_text"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:stepSize="1.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/stars"
                        android:background="@color/appcolor"
                        android:padding="4dp"
                        android:text="0"
                        android:textColor="#fff" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/orginiser_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="30dp"
                        android:src="@mipmap/app_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/orginiser_img"
                        android:text="Orginizer Name"
                        android:textSize="16sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/upper_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/appcolor"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/calnder_img"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/calender_detail" />

                    <TextView
                        android:id="@+id/date_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="#000"
                        android:layout_toRightOf="@+id/calnder_img"
                        android:layout_marginLeft="15dp"
                        android:text="Date goes here" />

                    <TextView
                        android:id="@+id/days_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#000"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="80dp"
                        android:text="days goes here" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="#000"
                        android:layout_weight="0.1"
                        android:gravity="start"
                        android:id="@+id/location_txt"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name Goes here"
                        android:layout_weight="0.1"
                        android:gravity="start"
                        android:textSize="12sp"
                        android:id="@+id/location_name"
                        android:layout_marginLeft="15dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:textColor="#000"
                        android:layout_weight="0.15"
                        android:gravity="start"
                        android:id="@+id/levl_txt"
                        android:layout_marginLeft="15dp"/>

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8">

                        <View
                            android:id="@+id/divider"
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginTop="10dp"
                            android:background="#c2c2c2"
                            android:layout_marginRight="56dp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="12dp"
                            android:gravity="center"
                            android:background="@color/appcolor"
                            android:padding="4dp"
                            android:id="@+id/level1"
                            android:text="1"
                            android:textColor="#fff" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="12dp"
                            android:gravity="center"
                            android:id="@+id/level2"
                            android:layout_toRightOf="@+id/level1"
                            android:background="@color/appcolor"
                            android:padding="4dp"
                            android:text="2"
                            android:textColor="#fff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="12dp"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/level2"
                            android:background="@color/appcolor"
                            android:padding="4dp"
                            android:text="3"
                            android:id="@+id/level3"
                            android:textColor="#fff" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="12dp"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/level3"
                            android:background="@color/appcolor"
                            android:padding="4dp"
                            android:text="4"
                            android:id="@+id/level4"
                            android:textColor="#fff" />

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meeting"
                        android:textColor="#000"
                        android:layout_weight="0.1"
                        android:gravity="start"
                        android:id="@+id/meeting_text"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name Goes here"
                        android:layout_weight="0.4"
                        android:gravity="start"
                        android:textSize="12sp"
                        android:id="@+id/meeting_desc"
                        android:layout_marginLeft="15dp"/>



                </LinearLayout>

                <TextView
                    android:id="@+id/lower_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>