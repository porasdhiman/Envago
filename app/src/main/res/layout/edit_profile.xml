            <RelativeLayout
                android:id="@+id/forgot_pass_layout"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/forgot_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Forgot password"
                    android:textColor="@color/textcolor"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                   android:src="@drawable/forward"
                    android:layout_centerVertical="true"
                    android:textCursorDrawable="@drawable/cursore_color"
                     />



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/LightGrey"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

            </View>
            <RelativeLayout
                android:id="@+id/paypal_body"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/paypal_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Paypal Address"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
android:hint="Your Paypal Address"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textCursorDrawable="@drawable/cursore_color"
                    android:textColor="#000"
                    android:id="@+id/paypal_edit"
                    android:gravity="right"
                    android:textSize="15sp" />



            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/LightGrey"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

            </View>

            <RelativeLayout
                android:id="@+id/id_body"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/id_textview"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Upload ID"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                  android:text="Tap to view"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:textColor="@color/textcolor"
                    android:id="@+id/document_edit"
                    android:layout_centerVertical="true"
                    android:textSize="15sp" />



            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/LightGrey"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

            </View>

            <LinearLayout
                android:id="@+id/about_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/about_textview"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="About me"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="15sp"
                    android:id="@+id/about_edit"
                   android:layout_marginTop="10dp"
                    android:textColor="#000"
                   />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/LightGrey"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

            </View>


            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

            </View>

        </LinearLayout>


    </ScrollView>
</LinearLayout>