<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/textcolor">


        <ImageView
            android:id="@+id/back_editprofile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="14dp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Edit Profile"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:text="Done"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_img_editprofile"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_gravity="center"

                android:scaleType="fitXY"
                android:background="@color/Gray"

               />
                <ImageView
                    android:id="@+id/camera_icon_img"
                    android:layout_width="40dp"
                    android:layout_height="30dp"

                    android:layout_alignParentRight="true"
                    android:layout_marginTop="300dp"

                    android:layout_marginRight="20dp"
                    android:src="@drawable/camera"/>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/body_user"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/user_textview"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Username"

                    android:textColor="#000" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                   android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:background="@null"
android:textCursorDrawable="@drawable/cursore_color"
                    android:hint="username"
                    android:id="@+id/username_edit"
                    android:textColor="#000"

                    />



            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/LightGrey">

            </View>

            <RelativeLayout
                android:id="@+id/body_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/name_textview"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Name"
                    android:textSize="15sp"

                    android:textColor="#000" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                   android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="name"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textCursorDrawable="@drawable/cursore_color"
                    android:id="@+id/name_edit"
                    android:textColor="#000"
                    android:textSize="15sp"
                    />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/LightGrey"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

            </View>

            <RelativeLayout
                android:id="@+id/body_email"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/email_textview"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"

                    android:text="Email"
                    android:textColor="#000"

                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="email"
                    android:id="@+id/email_edit"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:gravity="right"
                    android:textCursorDrawable="@drawable/cursore_color"
                    android:inputType="textEmailAddress"
                    />



            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/LightGrey"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

            </View>

            <RelativeLayout
                android:id="@+id/body_phone"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:id="@+id/phone_textview"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Phone"
                    android:textColor="#000"
                    android:textSize="15sp"

                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:hint="your phone number"
                    android:textCursorDrawable="@drawable/cursore_color"
                    android:id="@+id/phone_edit"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:maxLength="10"
                    android:gravity="right"
                    android:inputType="number"
                    />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/LightGrey"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

            </View>

         <!--   <LinearLayout
                android:id="@+id/body_phone_changepass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="130dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/pass_textview"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="0.8dp"
                    android:background="#000000">

                </View>

            </LinearLayout>

