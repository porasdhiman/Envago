<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/textcolor"
        android:id="@+id/main_heading">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_button"
            android:id="@+id/changepass_back"
            android:layout_margin="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:id="@+id/title"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="100dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#bcbcbc">

    </View>
    <RelativeLayout
        android:id="@+id/body_current"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/current_textview"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Current Password"
            android:textColor="#000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/right_img"
            android:layout_toRightOf="@+id/current_textview"
            android:background="@null"
            android:hint="Current Password"
            android:textColor="#000"
            android:textSize="14sp"
            android:id="@+id/pass_edittext"
            />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#bcbcbc">

    </View>

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="180dp"
        android:layout_height="80dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#bcbcbc">

    </View>
    <RelativeLayout
        android:id="@+id/body_newpass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/new_pass"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="New Password"
            android:textColor="#000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/right_img"
            android:layout_toRightOf="@+id/new_pass"
            android:background="@null"
            android:hint="New Password"
            android:textColor="#000"
            android:textSize="14sp"
            android:id="@+id/new_pass_edit"
            />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#bcbcbc">

    </View>



    <RelativeLayout
        android:id="@+id/body_new_re"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/new_pass_re"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Reytype New Password"
            android:textColor="#000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/right_img"
            android:layout_toRightOf="@+id/new_pass_re"
            android:background="@null"
            android:hint="Retype New Password"
            android:textColor="#000"
            android:textSize="14sp"
            android:id="@+id/new_pass_re_edit"
            />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#bcbcbc">

    </View>

    <Button
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:id="@+id/change_pass_button"
        android:background="@drawable/rectangle_button"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:text="Change Password"
        android:textColor="#fff"/>

</LinearLayout>